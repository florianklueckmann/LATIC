   </center>
   <top>
      <GridPane id="menuBox" prefHeight="60.0" BorderPane.alignment="CENTER">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
              <HBox alignment="CENTER_LEFT" prefWidth="451.0">
                  <children>
                  <ImageView id="mainLogo" fx:id="logo" fitHeight="50.0" fitWidth="101.0" pickOnBounds="true" preserveRatio="true">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin></ImageView>
                      <MenuBar id="menuBar">
                          <menus>
                              <Menu fx:id="menuFile" mnemonicParsing="false" styleClass="main-item" text="%file">
                                  <items>
                                      <MenuItem fx:id="menuItemOpen" mnemonicParsing="false" text="%open" />
                                      <MenuItem fx:id="menuItemSave" mnemonicParsing="false" text="%save" />
                                      <MenuItem fx:id="menuItemClose" mnemonicParsing="false" text="%close" />
                                  </items>
                              </Menu>
                              <Menu fx:id="menuHelp" mnemonicParsing="false" text="%help">
                                  <items>
                                      <MenuItem fx:id="menuItemDocumentation" mnemonicParsing="false" text="%documentation" />
